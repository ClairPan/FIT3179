{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A word cloud visualization depicting Vega research paper abstracts.",
  "width": 450,
  "height": 300,
  "padding": 0,
  "data": [
    {
      "name": "table",
      "values": [
        {"text": "NIGHTCLUB", "count": 14},
        {"text": "INDOOR PARTY", "count": 13},
        {"text": "CHURCH", "count": 13},
        {"text": "HUG OR SHAKE HANDS", "count": 13},
        {"text": "ATTEND A WEDDING/FUNERAL", "count": 12},
        {"text": "CASINO", "count": 10},
        {"text": "AIRPLANE", "count": 9},
        {"text": "GET A HAIRCUT", "count": 8},
        {"text": "PUBLIC POOL", "count": 8},
        {"text": "BOWLING", "count": 7},
        {"text": "BASKETBALL", "count": 7},
        {"text": "GROCERY SHOPPING", "count": 7},
        {"text": "SEE YOUR DOCTOR", "count": 5},
        {"text": "BEACH", "count": 5},
        {"text": "VOCATION", "count": 5},
        {"text": "WALK IN BUSY DOWNTOWN", "count": 5},
        {"text": "GOLF", "count": 3},
        {"text": "TAKE AWAY FOOD", "count": 2},
        {"text": "TENNIS", "count": 1},
        {"text": "OUTDOOR EXERCISE", "count": 1}
      ],
      "transform": [
        {
          "type": "formula", "as": "angle",
          "expr": "[-45, 0, 45][~~(random() * 3)]"
        },
        {
          "type": "formula", "as": "weight",
          "expr": "if(datum.text=='HUG OR SHAKE HANDS', 600, 300)"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "text"},
      "range": ["#de2d26", "#3690c0", "#d5a928"]
    }
  ],

  "marks": [
    {
      "type": "text",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "text": {"field": "text"},
          "align": {"value": "center"},
          "baseline": {"value": "alphabetic"},
          "fill": {"scale": "color", "field": "text"}
        },
        "update": {
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}
        }
      },
      "transform": [
        {
          "type": "wordcloud",
          "size": [650, 400],
          "text": {"field": "text"},
          "font": "Helvetica Neue, Arial",
          "fontSize": {"field": "datum.count"},
          "fontWeight": {"field": "datum.weight"},
          "fontSizeRange": [12, 40],
          "padding": 2
        }
      ]
    }
  ]
}
