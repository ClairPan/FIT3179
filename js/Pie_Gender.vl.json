{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Gender Balance on Confirmed Cases (Left) and Deaths (Right)",
  "padding": {"left": 0, "top": 0, "right": 0, "bottom": 30},
  "data": {
    "url": "https://raw.githubusercontent.com/ClairPan/FIT3179/main/data/donut.csv"
  },
  "params": [
    {
      "name": "Month_selection",
      "value": 2,
      "bind": {
        "input": "range",
        "min": 2,
        "max": 10,
        "step": 1,
        "name": "Month: "
      }
    }
  ],
  "transform": [{"filter": "datum.MonthID == Month_selection"}],
  "hconcat": [
    {
      "width": 300,
      "height": 250,
      "mark": {"type": "arc", "innerRadius": 50},
      "encoding": {
        "theta": {"field": "PercentageFullC", "type": "quantitative"},
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {
            "domain": ["Female", "Male"],
            "range": ["#ef6548", "#3690c0"]
          }
        },
        "tooltip": [
          {"field": "Gender", "type": "nominal"},
          {
            "field": "PercentageFullC",
            "type": "quantitative",
            "format": ".2f",
            "title": "Percentage (%)"
          }
        ]
      },
      "view": {"stroke": null}
    },
    {
      "width": 200,
      "height": 250,
      "mark": {"type": "arc", "innerRadius": 50},
      "encoding": {
        "theta": {"field": "PercentageFullD", "type": "quantitative"},
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {
            "domain": ["Female", "Male"],
            "range": ["#ef6548", "#3690c0"]
          }
        },
        "tooltip": [
          {"field": "Gender", "type": "nominal"},
          {
            "field": "PercentageFullD",
            "type": "quantitative",
            "format": ".2f",
            "title": "Percentage (%)"
          }
        ]
      },
      "view": {"stroke": null}
    }
  ]
}