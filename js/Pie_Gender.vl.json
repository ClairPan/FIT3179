{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Gender Balance on Confirmed Cases (Left) and Deaths (Right)",
  "padding": {"left": 0, "top": 0, "right": 0, "bottom": 30},
  "data": {
    "url": "https://raw.githubusercontent.com/ClairPan/FIT3179/main/data/donut.csv"
  },
  "params": [
    {
      "name": "Month_selection",
      "value": 2,
      "bind": {
        "input": "range",
        "min": 2,
        "max": 10,
        "step": 1,
        "name": "Month: "
      }
    }
  ],
  "transform": [{"filter": "datum.MonthID == Month_selection"}],
  "hconcat": [
    {
      "width": 250,
      "height": 250,
      "layer": [
        {
          "mark": {"type": "arc", "innerRadius": 75, "outerRadius": 100},
          "encoding": {
            "theta": {"field": "PercentageFullC", "type": "quantitative"},
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Female", "Male"],
                "range": ["#ef6548", "#3690c0"]
              }
            },
            "tooltip": [
              {"field": "Gender", "type": "nominal"},
              {
                "field": "RealValueC",
                "type": "quantitative",
                "title": "Comfirmed Cases"
              }
            ]
          },
          "view": {"stroke": null}
        },
        {
          "mark": {"type": "text", "fontSize": 26},
          "encoding": {
            "text": {"field": "Month", "type": "nominal"},
            "opacity": {
              "condition": [{"test": "datum['Gender'] == 'Male'", "value": 1}],
              "value": 0
            }
          }
        },
        {
          "transform": [{"filter": "datum['Gender'] == 'Female'"}],
          "mark": {"type": "text", "fontSize": 18, "dy": -95, "dx": 80},
          "encoding": {
            "text": {
              "field": "PercentageC",
              "type": "nominal",
              "format": ".0%"
            },
            "theta": {"field": "PercentageFullC", "type": "quantitative"},
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Female", "Male"],
                "range": ["#ef6548", "#3690c0"]
              }
            },
            "tooltip": [
              {"field": "Gender", "type": "nominal"},
              {
                "field": "RealValueC",
                "type": "quantitative",
                "title": "Comfirmed Cases"
              }
            ]
          }
        },
        {
          "transform": [{"filter": "datum['Gender'] == 'Male'"}],
          "mark": {"type": "text", "fontSize": 18, "dy": -95, "dx": -80},
          "encoding": {
            "text": {
              "field": "PercentageC",
              "type": "nominal",
              "format": ".0%"
            },
            "theta": {"field": "PercentageFullC", "type": "quantitative"},
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Female", "Male"],
                "range": ["#ef6548", "#3690c0"]
              }
            },
            "tooltip": [
              {"field": "Gender", "type": "nominal"},
              {
                "field": "RealValueC",
                "type": "quantitative",
                "title": "Comfirmed Cases"
              }
            ]
          }
        }
      ]
    },
    {
      "width": 250,
      "height": 250,
      "layer": [
        {
          "mark": {"type": "arc", "innerRadius": 75, "outerRadius": 100},
          "encoding": {
            "theta": {"field": "PercentageFullD", "type": "quantitative"},
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Female", "Male"],
                "range": ["#ef6548", "#3690c0"]
              }
            },
            "tooltip": [
              {"field": "Gender", "type": "nominal"},
              {"field": "RealValueD", "type": "quantitative", "title": "Deaths"}
            ]
          },
          "view": {"stroke": null}
        },
        {
          "mark": {"type": "text", "fontSize": 26},
          "encoding": {
            "text": {"field": "Month", "type": "nominal"},
            "opacity": {
              "condition": [{"test": "datum['Gender'] == 'Male'", "value": 1}],
              "value": 0
            }
          }
        },
        {
          "transform": [{"filter": "datum['Gender'] == 'Female'"}],
          "mark": {"type": "text", "fontSize": 18, "dy": -95, "dx": 80},
          "encoding": {
            "text": {
              "field": "PercentageD",
              "type": "nominal",
              "format": ".0%"
            },
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Female", "Male"],
                "range": ["#ef6548", "#3690c0"]
              }
            },
            "tooltip": [
              {"field": "Gender", "type": "nominal"},
              {"field": "RealValueD", "type": "quantitative", "title": "Deaths"}
            ]
          }
        },
        {
          "transform": [{"filter": "datum['Gender'] == 'Male'"}],
          "mark": {"type": "text", "fontSize": 18, "dy": -95, "dx": -80},
          "encoding": {
            "text": {
              "field": "PercentageD",
              "type": "nominal",
              "format": ".0%"
            },
            "color": {
              "field": "Gender",
              "type": "nominal",
              "scale": {
                "domain": ["Female", "Male"],
                "range": ["#ef6548", "#3690c0"]
              }
            },
            "tooltip": [
              {"field": "Gender", "type": "nominal"},
              {"field": "RealValueD", "type": "quantitative", "title": "Deaths"}
            ]
          }
        }
      ]
    }
  ],
  "config": {}
}
